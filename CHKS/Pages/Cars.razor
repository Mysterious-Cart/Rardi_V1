@page "/cars"

<PageTitle>Cars</PageTitle>
<RadzenStack>
    <RadzenRow>
        <InputText @bind-Value="@search" @oninput="@Search"></InputText>
        <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat"  Style="margin-left:auto"/>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.SimpleWithMenu" Style="height: 60vh;"
            Data="@cars" RowUpdate="@GridRowUpdate" RowCreate="@GridRowCreate" RowSelect="@SelectCar" TItem="CHKS.Models.mydb.Car" GotoFirstPageOnSort="true">
            <Columns>
                <RadzenDataGridColumn TItem="CHKS.Models.mydb.Car" Property="Plate" Title="ផ្លាកលេខ">
                  <EditTemplate Context="car">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@car.Plate" Name="Plate" />
                      <RadzenRequiredValidator Component="Plate" Text="Plate is required" style="position: absolute;" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CHKS.Models.mydb.Car" Property="Phone" Title="លេខទុស័ព្ទ">
                  <EditTemplate Context="car">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@car.Phone" Name="Phone" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CHKS.Models.mydb.Car" Property="Type" Title="ប្រភេទឡាន">
                  <EditTemplate Context="car">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@car.Type" Name="Type" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CHKS.Models.mydb.Car" Filterable="false" Sortable="false" Width="156px" TextAlign="TextAlign.Center">
                    <EditTemplate Context="car">
                        <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => SaveButtonClick(args, car)) @onclick:stopPropagation="true" />
                        <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            Click=@(args => CancelButtonClick(args, car)) @onclick:stopPropagation="true" />
                    </EditTemplate>
                    <Template Context="car">

                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => EditButtonClick(args, car)) @onclick:stopPropagation="true" />

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, car)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
