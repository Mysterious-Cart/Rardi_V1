@page "/payment--form"

@attribute [Authorize]
@using System.Globalization
<RadzenRow>
    <RadzenCard style="width:fit-content;">
        <RadzenStack Orientation="Orientation.Horizontal">
            <RadzenStack Orientation="Orientation.Vertical" Gap="35px">
                    <RadzenLabel Component="Total" Text="សរុប ($): "/>
                    <RadzenLabel Component="Baht" Text="បាត: "/>
                    <RadzenLabel Component="Dollar" Text="ដុលា: "/>
            </RadzenStack>
            <RadzenStack>
                    <RadzenTextBox title="Total" ReadOnly ="true" Value=@Total.ToString($"{0:N2}") Style="margin-left:1%"/>
                    <RadzenNumeric title="Baht" @bind-Value="Baht" Style="margin-left:1%"/>
                    <RadzenNumericRangeValidator Min="0" Component="Baht"/>
                    <RadzenNumeric title="Dollar" @bind-Value="Dollar" Style="margin-left:1%"/>
                    <RadzenNumericRangeValidator Min="0" Component="Dollar"/>
            </RadzenStack>
            <RadzenStack Gap="35px">
                    <RadzenLabel Component="Bank" Text="ABA: "/>
                    <RadzenLabel Component="Riel" Text="រៀល: "/>

            </RadzenStack>
            <RadzenStack>
                    <RadzenNumeric title="Bank" @bind-Value="Bank" Style="margin-left:1%"/>
                    <RadzenNumericRangeValidator Min="0" Component="Bank"/>
                    <RadzenNumeric title="Riel" @bind-Value="Riel" Style="margin-left:1%"/>
                    <RadzenNumericRangeValidator Min="0" Component="Riel"/>
            </RadzenStack>

        </RadzenStack>
            <RadzenColumn Style="margin-top: 25px;">            
                <RadzenButton title="Submit" locked="true" Click="@CashOut" Style="margin-left:1%; width:100%" Icon="paid" Text="គិតលុយ" ButtonStyle="ButtonStyle.Warning"/>
            </RadzenColumn>
    </RadzenCard>
</RadzenRow>

@code{
    private CultureInfo Currency = new CultureInfo("en-US");
}