@page "/single-input-pop-up"

@attribute [Authorize]

<PageTitle>SingleInputPopUp</PageTitle>

<RadzenRow>
    <RadzenStack Orientation="Orientation.Horizontal">
        @if(Info[0] == "Cart ID"){
            <RadzenRow style="width:fit-content;">
                <RadzenNumeric @bind-Value="CartID" title="CartID" Placeholder="Required" Min=1/>
                <RadzenNumericRangeValidator Component="CartID" Min="1"/>
            </RadzenRow>
            <RadzenButton Click="@Close" Icon="add_circle_outline" Text="បញ្ចូល" Style="font-family: 'Khmer OS Battambang' "/>

        }else if(Info[0]== "Choosing Date"){

            <RadzenRow style="width:fit-content">
                <RadzenDatePicker @bind-Value="ChosenDate" title="Date" Placeholder="Required"/>
            </RadzenRow>
            <RadzenButton Click="@Close" Icon="add_circle_outline" Text="បង្កើត"/>

        }else if(Info[0] == "Qty"){
            Console.WriteLine(Info[2]);
            <RadzenStack>
                <RadzenStack Gap="1px">
                    <RadzenText Text="តម្លៃលក់ដើម" Style="font-family: 'Khmer OS Battambang' " />
                    <RadzenTextBox @bind-Value="@Info[1]" ReadOnly=true/>
                </RadzenStack>
                <RadzenStack Gap="1px">
                    <RadzenText Text="ចំនួន" Style="font-family: 'Khmer OS Battambang' " />
                    <RadzenNumeric @bind-Value="Product[0]" title="Qty" Placeholder="Required" Min=0 Max="@decimal.Parse(@Info[2])"/>
                    <RadzenNumericRangeValidator Component="Qty" Min="0" Max="@Decimal.Parse(@Info[2])"/>
                    <RadzenText>ក្នុងស្តុកសល់: @Info[2]</RadzenText>
                </RadzenStack>
                <RadzenStack Gap="1px">
                    <RadzenText Text="តម្លៃថ្មី" Style="font-family: 'Khmer OS Battambang' " />
                    <RadzenNumeric @bind-Value="Product[1]" title="NewPrice" Placeholder="Required" Min=0/>
                    <RadzenNumericRangeValidator Component="NewPrice" Min="0"/>
                </RadzenStack>
                <RadzenStack Gap="1px">
                    <RadzenText Text="បញ្ចុះតម្លៃ(គិតជាភាគរយ)" Style="font-family: 'Khmer OS Battambang' " />
                    <RadzenNumeric @bind-Value="Product[2]" title="Discount" Placeholder="Required" Min=0 Max="100"/>
                    <RadzenNumericRangeValidator Component="Discount" Min="0" Max="100"/>
                </RadzenStack>
                <RadzenButton Click="@Close" Icon="add_circle_outline" Text="បញ្ចូល" Style="font-family: 'Khmer OS Battambang' "/>
            </RadzenStack>
        }

    </RadzenStack>


</RadzenRow>
