@inherits LayoutComponentBase
<head>
    <link href="css/Layout.css" rel="stylesheet"/>
</head>
<RadzenComponents />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';  ">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick">
                        <ChildContent>

                            @if(Security.IsInRole(new string[]{"Admin" ,"Dev"})){
                                <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Profile" />
                                <RadzenProfileMenuItem Path="application-users" Icon="person" Text="Users" />
                                <RadzenProfileMenuItem Path="application-roles" Icon="security" Text="Roles" />
                            }
                            <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                        </ChildContent>
                        <Template>
                            @Security.User?.Name
                            <RadzenGravatar Email="@Security.User?.Name" />
                        </Template>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody style="background-color:#F1F1F2;">
         @Body
    </RadzenBody>
    <RadzenSidebar Expanded="true" class="sidebar" >
        <RadzenPanelMenu  Style="margin-top: 20dvh;" >
            <RadzenStack JustifyContent="JustifyContent.SpaceEvenly" Style="overflow:hidden;" Wrap="Radzen.FlexWrap.NoWrap">
                <RadzenPanelMenuItem Text="ទំព័រគិតលុយ" Path="" Icon="home_" class="panelmenuitem" />
                <RadzenPanelMenuItem Text="គ្រប់គ្រងទំនេញ" Path="inventories" Icon="inventory_" class="panelmenuitem" />
                <RadzenPanelMenuItem Text="ថ្ងៃនេះ" Path="Dailies" Icon="assignment_" class="panelmenuitem"/>
                <RadzenPanelMenuItem Text="ទិន្នន័យ" Path="statistic"  Icon="bar_chart_" class="panelmenuitem"/>
                <RadzenPanelMenuItem Text="ប្រវ័ត្តិ" Path="histories" Icon="history_" class="panelmenuitem"/>
                <RadzenPanelMenuItem Text="ក្រុមហ៊ុន" Path="company" Icon="apartment_" class="panelmenuitem"/>
            </RadzenStack>
        </RadzenPanelMenu>
    </RadzenSidebar>
</RadzenLayout>
