@inherits LayoutComponentBase


<MudThemeProvider Theme="@MyCustomTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<RadzenComponents />

<MudLayout >
    <MudDrawer Fixed="true" Elevation="1" Variant="@DrawerVariant.Persistent" OpenMiniOnHover="true" Open=true>
        <MudNavMenu style="margin-top: 100px;">
            <MudNavLink Match="NavLinkMatch.All" Href="/" Icon="@Icons.Material.Filled.Money">Cashier</MudNavLink>
            <MudNavGroup title="Products" Icon="@Icons.Material.Filled.Storage">
                <MudNavLink Match="NavLinkMatch.All" Href="/Inventories" Icon="@Icons.Material.Filled.Inventory2">Inventory</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Href="/Orders" Icon="@Icons.Material.Filled.ReceiptLong">Orders</MudNavLink>
            </MudNavGroup>
            <MudNavLink Match="NavLinkMatch.All" Href="/Dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/Histories" Icon="@Icons.Material.Filled.Person">Customer</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent style="max-height: 100dvh; height:100dvh;overflow: hidden; position: relative; padding:20px">
        @Body
    </MudMainContent>
</MudLayout>

@code {

    MudTheme MyCustomTheme = new MudTheme()
    {
        Typography = new Typography()
        {
            Body1 = new Body1()
            {
                FontFamily = new[] { "Khmer OS Battambang", "Helvetica", "Arial", "sans-serif" },

            }
        }
    };
}
